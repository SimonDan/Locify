<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp" android:background="@color/bg" android:gravity="center_vertical" android:id="@+id/textFromAction">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textFromActionValue" android:gravity="left" android:textColor="@android:color/white" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:textSize="20dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textFromActionButton" android:layout_gravity="center_vertical|right" android:background="@color/transparent_back" android:src="@drawable/change" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_marginRight="5dp" android:paddingBottom="10dp"/>
</RelativeLayout>