<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="1" android:background="@color/bg">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationList" android:background="@color/bg" android:layout_marginLeft="10dp" android:layout_alignParentEnd="true" android:layout_below="@+id/textView" android:layout_alignParentStart="true" android:layout_above="@+id/showMeAsTargetCheckbox" android:layout_marginBottom="10dp" android:layout_marginTop="10dp"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressOverview" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:visibility="invisible"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zeige mich betreffende Erinnerungen"
        android:id="@+id/showMeAsTargetCheckbox" android:textColor="#ffffff" android:enabled="true" android:layout_alignParentBottom="true" android:layout_alignStart="@+id/notificationList" android:layout_marginBottom="12dp"/>
    <TextView android:layout_width="fill_parent" android:layout_height="50dp" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView" android:layout_marginLeft="0dp" android:textStyle="bold" android:background="@color/title_bg" android:gravity="center_vertical|center_horizontal" android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:text="@string/overview_title" android:textColor="@android:color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_button_title"
        android:id="@+id/newNotificationButton" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true" android:layout_marginRight="10dp" android:layout_marginBottom="5dp"/>
</RelativeLayout>